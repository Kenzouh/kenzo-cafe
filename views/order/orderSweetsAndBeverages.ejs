    <!-- Payment Forms -->

    <div class="flex justify-center py-16">
        <div class="wrapper max-w-6xl bg-transparent border-2 border-whiteAlpha backdrop-blur-[20px] text-white rounded-xl p-5">
            <!-- POST = for sensitive data -->
            <form action="/kenzoCafe/order/success" method="POST">

                <h1 class="text-2xl font-bold mb-6 text-center">Payment Forms</h1>
                

                <!-- ========================= Username ========================= -->


                <div class="my-8 flex items-center space-x-4">
                    <label for="firstName" class="required text-sm font-medium mb-2">First Name</label>
                    <input type="text" id="firstName" placeholder="Hiromi" 
                    class="text-white placeholder:text-slate-500  bg-transparent border border-white/20 rounded-lg  px-4 py-2  
                    focus:outline-none focus:ring-2 focus:ring-customBrown2-veryLight focus:border-customBrown2-veryDark w-1/2"
                    required />

                    <label for="lastName" class="text-sm font-medium mb-2">Last Name</label>
                    <input type="text" id="lastName" placeholder="Harada" 
                    class="text-white placeholder:text-slate-500  bg-transparent border border-white/20 rounded-lg  px-4 py-2  
                    focus:outline-none focus:ring-2 focus:ring-customBrown2-veryLight focus:border-customBrown2-veryDark w-1/2" />
                </div>


                <!-- ========================= Address ========================= -->


                <div class="my-8">
                    <label for="username" class="required block text-sm font-medium mb-2">Address 
                        <span class="font-extralight">&lpar;if dine in: enter a space to leave this blank&rpar;</span></label>
                    <input type="text" id="address" placeholder="28-A  Ravioli Street" 
                    class="text-white placeholder:text-slate-500  bg-transparent border border-white/20 rounded-lg w-full px-4 py-2  
                    focus:outline-none focus:ring-2 focus:ring-customBrown2-veryLight focus:border-customBrown2-veryDark"
                    required />
                </div>


                <!-- ========================= Phone Number ========================= -->


                <div class="my-8">
                    <label for="phone" class="required block text-sm font-medium mb-2">Phone Number 
                        <span class="font-extralight">&lpar;if dine in: enter a space to leave this blank&rpar;</span></label>
                    <input type="text" id="phone" placeholder="0923-***-****" 
                    class="text-white placeholder:text-slate-500  bg-transparent border border-white/20 rounded-lg w-full px-4 py-2  
                    focus:outline-none focus:ring-2 focus:ring-customBrown2-veryLight focus:border-customBrown2-veryDark"
                    required />
                </div>


                <!-- ========================= Order requests ========================= -->

                
                <label for="payment" class="mb-2 block">Order Requests:</label>

                <div id="orderContainer">
                    <!-- This will be a placeholder for the order content -->
                </div>

                <div class="flex justify-center">
                    <div id="addBtn" class="inline-block bg-green-500 hover:bg-green-700
                    active:bg-green-900 text-lg py-2 px-4 my-4 rounded-full cursor-pointer">
                    +
                    </div>

                </div>

                

                <!-- ========================= Avail for a monthly VIP subscription? ========================= -->
                

                <div class="my-8 relative group">
                    <label for="vip" class="text-sm font-medium mr-2">Avail for a monthly VIP subscription</label> 
                    <input type="checkbox" id="vip" class="mr-4"/>

                    <div class="inline-block text-green-400">P799.00 &lpar;monthly&rpar;</div>

                    <div class="text-blue-200 text-[10px]">VIP perks &lpar;Hover me&rpar;!</div>

                    <div class="absolute hidden group-hover:block bg-white text-black p-4 mt-2 rounded shadow-lg w-128 z-10">
                        <p class="text-green-800 font-bold">VIP perks:</p>
                        <ul class="list-disc pl-5 after:">
                            <li><b>5% discount</b> on your total purchase!</li>
                            <li><b>Sneak peaks</b> on future products!</li>
                            <li>A chance to win a <b>ticket to Switzerland!</b></li>
                            <li>A chance to <b>visit the factory!</b></li>
                        </ul>
                    </div>
                </div>


                <!-- ========================= Discounts ========================= -->


                <div class="my-8">
                    <label for="discounts" class="block text-sm font-medium mb-2">Discounts</label>

                    <div class="flex justify-center space-x-8">
                        <div class="flex items-center">
                            <label for="discounts" class="text-sm font-medium mr-2">Birth Month&colon;</label> 
                            <input type="checkbox" id="birthMonthDiscount" class="mr-2"/>
                        
                            <div class="inline-block text-blue-400 mr-16">2&percnt; off</div>
                        

                            <label for="discounts" class="text-sm font-medium mr-2">VIP&colon;</label> 
                            <input type="checkbox" id="vipDiscount" class="mr-4"/>

                            <div class="inline-block text-blue-400">5&percnt; off</div>
                        </div>
                    </div>

                    <div class="flex justify-center space-x-8 mt-4">

                        <div class="flex items-center">
                            <label for="discounts" class="text-sm font-medium mr-2 ml-20">Senior&colon;</label> 
                            <input type="checkbox" id="seniorDiscount" class="mr-2"/>

                            <div class="inline-block text-blue-400 mr-16">2&percnt; off</div>
                        
                            <label for="discounts" class="text-sm font-medium mr-2">Employee&colon;</label> 
                            <input type="checkbox" id="employeeDiscount" class="mr-4"/>

                            <div class="inline-block text-blue-400">2&percnt; off</div>
                        </div>
                    </div>
                </div>
                

                <!-- ========================= Dining Options =========================-->


                <div class="my-8">
                    <label for="diningOptions" class="required block text-sm font-medium mb-2">Dining Options</label>
                    
                    <div class="flex justify-center">
                        <label for="dineIn" class="mr-4">Dine In: </label>
                        <input type="radio" id="dineIn" name="diningOptions" value="dineIn" class="mr-4" required/>

                        <label for="takeOut" class="ml-4 mr-4">Take Out:</label>
                        <input type="radio" id="takeOut" name="diningOptions" value="takeOut" required/>
                    </div>
                </div>


                <!-- ========================= Payment Option ========================= -->


                <label for="payment" class="required mr-4">Payment Method:</label>

                <select id="payment" class="text-white placeholder:text-slate-500  bg-transparent border 
                border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-customBrown2-veryLight 
                focus:border-customBrown2-veryDark" required>
                    <option value="cash" class="text-black bg-transparent">Cash</option>
                    <option value="mastercard" class="text-black bg-transparent"> Credit Card</option>
                    <option value="debitcard" class="text-black bg-transparent">Debit Card</option>
                </select><br/><br/>


                <!-- ========================= Leave a message? ========================= -->
                
                
                <label for="message" class="mb-2 block">Leave a note/message 
                    <span class="font-extralight">&lpar;optional&rpar;:</span></label>

                <!--Text area tags = lets the user input their thoughts in a text box.-->
                <textarea id="message" rows="3" cols="25" placeholder="Can you add more tissue? Thanks!" 
                class="text-white placeholder:text-slate-500 bg-transparent border border-white/20 
                rounded-lg w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-customBrown2-veryLight 
                focus:border-customBrown2-veryDark"></textarea><br /><br />
                    
                    <div class="flex justify-center mt-4">
                        <p class="text-green-100 font-bold py-4 px-1 block">Original Price:</p>
                        <p class="text-green-100 font-bold py-4 px-1 block" id="original-price">P0.00</p>
                    </div>

                    <div class="flex justify-center mt-2">
                        <p class="text-green-300 font-bold border-2 border-green-800 rounded-xl 
                        py-4 px-8 block" id="total-price">Total Price: P0.00</p>
                    </div>

                <div class="float-right">
                    <input type="Reset" class="bg-red-300 hover:bg-red-400 active:bg-red-500 
                    cursor-pointer text-black font-bold py-2 px-6 border-2 border-red-800 rounded-3xl" />
                    <input type="Submit" class="bg-green-300 hover:bg-green-400 active:bg-green-500 
                    cursor-pointer text-black font-bold py-2 px-6 border-2 border-green-800 rounded-3xl" />
                </div>


            </form>
